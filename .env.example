OPENAI_API_KEY=sk-...
TAVILY_API_KEY=tvly-...
SERPAPI_API_KEY=...
CHROMA_PERSIST_DIRECTORY=./chroma_db
SQLITE_CHECKPOINT_PATH=./checkpoints.sqlite

# Set for distributed mode (Celery + Redis). Leave empty for single-process dev.
REDIS_URL=

# With Docker Compose, use: REDIS_URL=redis://redis:6379/0
OPENAI_MODEL=gpt-4o-mini

# LangSmith (tracing / observability) - get key at https://smith.langchain.com
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=lsv2_pt_...
LANGSMITH_PROJECT=research-synthesis-agent
# LANGSMITH_WORKSPACE_ID=...  # optional, for multi-workspace API keys
